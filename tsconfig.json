{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es6",
        "allowJs": true,
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "lib": ["es6", "dom"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
